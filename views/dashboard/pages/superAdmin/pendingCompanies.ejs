<!doctype html>
<html lang="<%= locale %>" dir="<%= dir %>">

  <%- include('../../partials/head.ejs') %>

  <body class="">

    <div class="bmd-layout-container bmd-drawer-f-l avam-container animated bmd-drawer-in">

      <!-- Header -->
      <%- include('../../partials/header.ejs') %>

      <!-- Sidebar -->
      <div id="dw-s1" class="bmd-layout-drawer bg-faded">
        <%- include('../../partials/sidebar.ejs') %>
      </div>

      <!-- Main Content (structure الأصلية الصحيحة بدون أي تعديل) -->
      <div class="bmd-layout-content">

        <div class="container-fluid my-4">

          <!-- Title + Breadcrumb -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0">
              <%= t('dashboard:superAdmin.companies.pending_companies_title') %>
            </h4>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                  <a href="/superadmin/dashboard">
                    <%= t('dashboard:superAdmin.companies.breadcrumb_dashboard') %>
                  </a>
                </li>
                <li class="breadcrumb-item">
                  <a href="/superadmin/companies">
                    <%= t('dashboard:superAdmin.companies.breadcrumb_companies') %>
                  </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  <%= t('dashboard:superAdmin.companies.pending_companies_title') %>
                </li>
              </ol>
            </nav>
          </div>

          <!-- Summary Card -->
          <div class="row mb-4">
            <div class="col-md-4 col-sm-6">
              <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                  <div class="flex-grow-1">
                    <h5 class="card-title mb-1">
                      <%= t('dashboard:superAdmin.companies.pending_companies_count') %>
                    </h5>
                    <p class="mb-0 text-muted fs-6"><%= companies.length %></p>
                  </div>
                  <span class="badge bg-label-primary fs-4 p-3">
                    <i class="bx bx-time"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- Companies Table -->
          <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">
                <%= t('dashboard:superAdmin.companies.pending_companies_title') %>
              </h5>
            </div>

            <div class="table-responsive text-nowrap">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><%= t('dashboard:superAdmin.companies.table_logo') %></th>
                    <th><%= t('dashboard:superAdmin.companies.table_company_name') %></th>
                    <th><%= t('dashboard:superAdmin.companies.table_email') %></th>
                    <th><%= t('dashboard:superAdmin.companies.table_admin') %></th>
                    <th><%= t('dashboard:superAdmin.companies.table_created_at') %></th>
                    <th class="text-center"><%= t('dashboard:superAdmin.companies.table_actions') %></th>
                  </tr>
                </thead>

                <tbody>
                  <% if (companies.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-center py-5">
                        <div class="text-muted fs-5">
                          <i class="bx bx-time fs-1 d-block mb-2"></i>
                          <%= t('dashboard:superAdmin.companies.empty_state') %>
                        </div>
                      </td>
                    </tr>
                  <% } else { %>

                    <% companies.forEach(company => { %>
                      <tr>

                        <!-- Logo -->
                        <td style="width:72px;">
                          <% if (company.logoUrl) { %>
                            <img src="<%= company.logoUrl %>" alt="logo" class="rounded-circle" width="40" height="40">
                          <% } else { %>
                            <div class="avatar avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:40px; height:40px;">
                              <%= company.name.charAt(0).toUpperCase() %>
                            </div>
                          <% } %>
                        </td>

                        <!-- Name + Subdomain -->
                        <td>
                          <strong><%= company.name %></strong>
                          <br>
                          <small class="text-muted"><%= company.subdomain %>.tokdesk.com</small>
                        </td>

                        <!-- Email -->
                        <td><%= company.email %></td>

                        <!-- Admin -->
                        <td>
                          <div class="d-flex align-items-center">
                            <div class="avatar avatar-xs bg-info text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:32px; height:32px;">
                              <i class="bx bx-user"></i>
                            </div>
                            <div>
                              <strong><%= company.adminName %></strong><br>
                              <small class="text-muted"><%= company.adminEmail %></small>
                            </div>
                          </div>
                        </td>

                        <!-- Created At -->
                        <td>
                          <%= company.createdAt ? company.createdAt.toLocaleDateString(locale) : '' %>
                        </td>

                        <!-- Actions -->
                        <td class="text-center">
                          <a href="/superadmin/companies/<%= company._id %>/approve" class="btn btn-success btn-sm me-1">
                            <i class="bx bx-check"></i>
                            <%= t('dashboard:superAdmin.companies.approve') %>
                          </a>

                          <a href="/superadmin/companies/<%= company._id %>/reject" class="btn btn-danger btn-sm">
                            <i class="bx bx-x"></i>
                            <%= t('dashboard:superAdmin.companies.reject') %>
                          </a>
                        </td>

                      </tr>
                    <% }) %>

                  <% } %>

                </tbody>

              </table>
            </div>

          </div>

        </div>

      </div> <!-- END content -->

    </div> <!-- END layout -->

    <%- include('../../partials/scripts.ejs') %>
  </body>
</html>
